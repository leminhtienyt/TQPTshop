    <script>
        var coll = document.getElementsByClassName("collapsible");
        var i;
        for (i = 0; i < coll.length; i++) {
            coll[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var contentList = this.nextElementSibling;
                if (contentList.style.maxHeight) {
                    contentList.style.maxHeight = null;
                } else {
                    contentList.style.maxHeight = contentList.scrollHeight + "px";
                }

            });
        }
        var coll_nav = document.getElementsByClassName("collapsible_nav");
        var i;
        for (i = 0; i < coll_nav.length; i++) {
            coll_nav[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var contentList_nav = this.nextElementSibling;
                if (contentList_nav.style.maxHeight) {
                    contentList_nav.style.maxHeight = null;
                } else {
                    contentList_nav.style.maxHeight = contentList_nav.scrollHeight + "px";
                }

            });
        }
    </script>
