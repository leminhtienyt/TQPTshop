          {{#each personalInfo}}
          <form method="POST" action="EditMyInfo" id="user_info" enctype="multipart/form-data">
            <div class="row">
              <div class="col-md-4">
                <div class="card card-profile">
                  <style>
                    .card-avatar {
                      min-width: 250px;
                      min-height: 250px;
                    }
                  </style>
